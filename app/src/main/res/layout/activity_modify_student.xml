<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="xox.exo1.ModifyStudentActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom :"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prenom :"
        android:id="@+id/imageURI"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Téléphone :"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageURI"
        android:layout_alignLeft="@+id/imageURI"
        android:layout_alignStart="@+id/imageURI"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date de naissance :"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="10dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:textSize="14dp"
        android:width="100dp"
        android:inputType="text"
        android:id="@+id/nom"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:width="100dp"
        android:text=""
        android:textSize="14dp"
        android:inputType="text"
        android:id="@+id/prenom"
        android:layout_alignTop="@+id/imageURI"
        android:layout_alignLeft="@+id/nom"
        android:layout_alignStart="@+id/nom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:width="100dp"
        android:text=""
        android:textSize="14dp"
        android:inputType="text"
        android:id="@+id/tel"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/prenom"
        android:layout_alignStart="@+id/prenom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:width="100dp"
        android:text=""
        android:textSize="14dp"
        android:inputType="date"
        android:id="@+id/datenais"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/tel"
        android:layout_alignStart="@+id/tel" />



    <Button
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        android:textColor="@color/material_deep_teal_500"
        android:id="@+id/modifyStudent"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/datenais"
        android:layout_toLeftOf="@+id/datenais"
        android:layout_toStartOf="@+id/datenais" />
</RelativeLayout>
